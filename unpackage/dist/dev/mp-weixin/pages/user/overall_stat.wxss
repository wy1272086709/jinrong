.charts-box {
  width: 100%;
  height: 300px;
  background-color: #333333;
}
.title {
  color: #FFFFFF;
}
#root-view {
  /*display: flex;*/
  background: #333333;
  min-height: 100vh;
  /*flex-direction: column;*/
}
.charts {
  width: 666rpx;
  height: 500rpx;
}
.common-font-1, #income-view .income-view-table-td-label {
  font-size: 22rpx;
  font-family: SimHei;
  font-weight: 400;
}
.label-font-color, #income-view .income-view-table-td-label {
  color: rgba(255, 255, 255, 0.7);
}
.gap-view {
  background: #4D5269;
  opacity: 0.5;
  height: 14rpx;
}
#income-view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 40rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
#income-view .income-view-table {
  /*padding-top: 20rpx;
		padding-bottom: 20rpx;*/
  /*background: rgba(255, 255, 255, 1);*/
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
#income-view .income-view-table-td {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
#income-view .income-view-table-td-top {
  padding-top: 36rpx;
  padding-bottom: 14rpx;
}
#income-view .income-view-table-td-top > view:nth-child(2) {
  margin-top: 31rpx;
}
#income-view .income-view-table-td-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding-bottom: 36rpx;
  padding-top: 60rpx;
}
#income-view .income-view-table-td-bottom > view:nth-child(1) {
  margin-right: 16rpx;
}
.income-view-table-td-top {
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.income-view-table-td-bottom {
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
#income-curve-view {
  padding-left: 42rpx;
  padding-right: 42rpx;
}
#income-curve-view-stat {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  /*background: rgba(255, 255, 255, 1);*/
}
#income-curve-view-stat-button {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 20px;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
#income-curve-view-stat-button  .u-default-hover {
  background-color: rgba(255, 255, 255, 0.3);
}
.label-income {
  font-weight: 600;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #F2F2F2;
}
.red-css {
  color: #EE4368;
  font-weight: bold;
}
.green-css {
  color: #0BF4FD;
  font-weight: bold;
}

