.list {
  padding-bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  /*margin-bottom: 80rpx;*/
}
#root-view {
  background: -webkit-gradient(linear, left bottom, left top, from(#2C2C2C), to(#3D3D3D));
  background: -webkit-linear-gradient(bottom, #2C2C2C, #3D3D3D);
  background: linear-gradient(0deg, #2C2C2C, #3D3D3D);
  height: 100vh;
}
#root-view #login-view {
  margin-top: 300rpx;
  margin-left: 56rpx;
}
#root-view  .u-label {
  font-size: 40rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #FFFFFF;
  margin-bottom: 42rpx;
}
#root-view  .u-field {
  font-size: 28rpx;
  padding: 31rpx 0rpx;
  text-align: left;
}
#root-view  .u-border-bottom::after {
  width: 1280rpx;
  color: #B9B9B9;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
}
#root-view #title-view {
  font-size: 56rpx;
  margin-left: 56rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #5B80F5;
  margin-top: 120rpx;
  margin-bottom: 109rpx;
}
#root-view #top-view {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
#root-view #top-view-left {
  width: 324rpx;
  height: 325rpx;
  left: 119rpx;
  top: 100rpx;
  position: absolute;
  /*opacity: 0.4;*/
  -webkit-border-radius: 23rpx;
          border-radius: 23rpx;
}
#root-view #top-view-left > image {
  width: 145rpx;
  height: 144rpx;
}
#root-view #top-view-right {
  position: absolute;
  right: 0px;
}
#root-view #top-view-right > image {
  width: 299rpx;
  height: 245rpx;
}
#login-btn {
  margin-left: 40rpx;
  width: 670rpx;
  height: 88rpx;
  -webkit-border-radius: 200rpx;
          border-radius: 200rpx;
  margin-top: 80rpx;
  background: -webkit-gradient(linear, right top, left top, from(#4F7AED), to(#91AEFE));
  background: -webkit-linear-gradient(right, #4F7AED, #91AEFE);
  background: linear-gradient(-90deg, #4F7AED, #91AEFE);
}
#login-btn > view {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 36rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #FFFFFF;
}
.common-font-property, .common-font, .field-font {
  font-family: SimHei;
  font-weight: 400;
}
.common-font {
  font-size: 28rpx;
}
.title-font-css {
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #A7A7A7;
}
.input-placeholder-color {
  color: #D1D1D1;
}
#bottom-image {
  position: absolute;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  left: 0px;
}
.bottom-image {
  width: 325rpx;
  height: 195rpx;
}
.field-font {
  font-size: 40rpx;
}

